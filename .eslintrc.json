{
  "root": true,
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended", 
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "react/prop-types": "off"
  }
}